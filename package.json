{
  "name": "@filecoin-station/core",
  "version": "7.2.1",
  "type": "module",
  "description": "Filecoin Station Core",
  "license": "(Apache-2.0 AND MIT)",
  "repository": "filecoin-station/core",
  "types": "dist/index.d.ts",
  "bin": {
    "station": "./bin/station.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "test": "npm run build && npm run test:lint && npm run test:unit",
    "test:lint": "prettier --check . && standard",
    "test:unit": "mocha --timeout 15000",
    "version": "npm run build && node ./scripts/version.js",
    "postinstall": "node ./scripts/post-install.js",
    "postpublish": "node ./scripts/post-publish.js",
    "release": "np"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "np": "^7.6.3",
    "prettier": "^2.8.4",
    "standard": "^17.0.0",
    "stream-match": "^3.0.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.33.2",
    "@sentry/node": "^7.41.0",
    "execa": "^7.0.0",
    "gunzip-maybe": "^1.4.2",
    "proper-lockfile": "^4.1.2",
    "rotating-file-stream": "^3.1.0",
    "tail": "^2.2.6",
    "tar-fs": "^2.1.1",
    "undici": "^5.20.0",
    "unzip-stream": "^0.3.1",
    "yargs": "^17.7.1"
  },
  "sentryEnvironment": "development"
}
