{
  "name": "@filecoin-station/core",
  "version": "16.1.0-0",
  "description": "Filecoin Station Core",
  "license": "(Apache-2.0 AND MIT)",
  "repository": "filecoin-station/core",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "station": "./bin/station.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc -p .",
    "format": "prettier --write .",
    "lint": "npm run test:lint",
    "start": "node ./bin/station.js",
    "test": "npm run build && npm run test:lint && npm run test:unit",
    "test:lint": "prettier --check . && standard",
    "test:unit": "mocha",
    "version": "npm run build && node ./scripts/version.js",
    "postinstall": "node ./scripts/post-install.js",
    "postpublish": "node ./scripts/post-publish.js",
    "release": "np"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "devDependencies": {
    "@types/yargs": "^17.0.24",
    "get-stream": "^8.0.1",
    "mocha": "^10.2.0",
    "np": "^8.0.1",
    "prettier": "^3.0.0",
    "standard": "^17.0.0",
    "stream-match": "^1.2.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@glif/filecoin-address": "^2.0.43",
    "@influxdata/influxdb-client": "^1.33.2",
    "@sentry/node": "^7.41.0",
    "ethers": "^6.8.1",
    "execa": "^8.0.1",
    "gunzip-maybe": "^1.4.2",
    "p-retry": "^6.1.0",
    "tar-fs": "^3.0.3",
    "undici": "^5.20.0",
    "unzip-stream": "^0.3.1",
    "yargs": "^17.7.1"
  },
  "sentryEnvironment": "development"
}
